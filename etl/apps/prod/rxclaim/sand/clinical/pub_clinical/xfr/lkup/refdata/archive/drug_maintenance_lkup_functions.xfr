include "~$PUB_CLINICAL_DML/cli_msg_types.dml";
include "~$PUB_CLINICAL_DML/cli_hash_lkup_types.dml";

constant cli_string_t PUB_CLINICAL_MFS_REFDATA parameter;

cli_string_t out :: get_drug_maintenance_lkup_path() inline =
begin
  out :: PUB_CLINICAL_MFS_REFDATA + '/cli_drug_maintenance.dat';
end;

/*******************************************/
/* Source Environment Lookup (natural key) */
/*******************************************/

type drug_maintenance_lkup_t =
record
  lookup_identifier_type        id             = -1; 
  drug_maintenance_hash_lkup_t  RecordFormat() = allocate_with_defaults();
  string('')                    key()          = {drug_maintenance.drug_maint_cd};     
  
  // Optional function field. This an example technical repository
  // location referenced using dollar substitution in PDL.
  // You can specify a different technical repository location.
  //string('') eme_dataset_location() = "$DATA_LOOKUP/lookup.dat"; 
end;

let drug_maintenance_lkup_t GLKUP_DRUG_MAINTENANCE = allocate_with_nulls();

drug_maintenance_lkup_t out :: load_drug_maintenance_lkup() inline =
begin
  if (GLKUP_DRUG_MAINTENANCE.id == lookup_not_loaded())
    GLKUP_DRUG_MAINTENANCE = lookup_load(this_partition_path(get_drug_maintenance_lkup_path()));
  
  out :: GLKUP_DRUG_MAINTENANCE;
end;

drug_maintenance_t out :: get_drug_maintenance(drug_maint_cd) inline =
begin
  let drug_maintenance_lkup_t lkup = load_drug_maintenance_lkup();
  out :: lookup(lkup, drug_maint_cd).drug_maintenance;
end;
