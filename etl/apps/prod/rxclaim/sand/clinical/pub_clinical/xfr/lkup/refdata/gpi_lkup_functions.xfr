include "~$PUB_CLINICAL_DML/cli_msg_types.dml";
include "~$PUB_CLINICAL_DML/cli_hash_lkup_types.dml";

constant cli_string_t  PUB_CLINICAL_SERIAL_REFDATA  parameter;
constant cli_string_t  PUB_CLINICAL_MFS_REFDATA     parameter;

cli_string_t out :: get_gpi_lkup_path() inline =
begin
  out :1: if (this_partition() == -1) PUB_CLINICAL_SERIAL_REFDATA + '/gpi.dat';
  out  ::        this_partition_path( PUB_CLINICAL_MFS_REFDATA    + '/gpi.dat' );
end;

cli_string_t out :: get_gpi_indx_path(cli_string_t lkup_path, cli_string_t index_nm) inline =
begin
  out :1: re_replace(lkup_path, '\\.dat$', '.' + index_nm + '.idx');
end;

/************************************************/
/* GPI Lookup (ids surrogate key) */
/************************************************/

type gpi_lkup_t =
record
  lookup_identifier_type  id             = -1; 
  gpi_hash_lkup_t         RecordFormat() = allocate_with_defaults();
  string('')              key()          = {gpi.gpi_id};
  
  // Optional function field. This an example technical repository
  // location referenced using dollar substitution in PDL.
  // You can specify a different technical repository location.
  //string('') eme_dataset_location() = "$DATA_LOOKUP/lookup.dat"; 
end;

let gpi_lkup_t GLKUP_GPI = allocate_with_nulls();

gpi_lkup_t out :: load_gpi_lkup() inline =
begin
  if (GLKUP_GPI.id == lookup_not_loaded())
  begin
    let lkup_path  = get_gpi_lkup_path();
    let indx_path  = get_gpi_indx_path(lkup_path, 'gpi');
    let indx_found = file_information(indx_path).found;
    
    GLKUP_GPI = if (indx_found) lookup_load(lkup_path, indx_path)
                else            lookup_load(lkup_path);
  end;
  
  out :: GLKUP_GPI;
end;

gpi_t out :: get_gpi(gpi_id) inline =
begin
  let gpi_lkup_t lkup = load_gpi_lkup();
  out :: lookup(lkup, gpi_id).gpi;
end;
