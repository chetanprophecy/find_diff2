include "~$PUB_DXF_DML/event/file_event_registration.dml";

out :: get_registration_file_path_for_flat_file(target_system, process_ilm_events = "0")=
begin
  out :: if(process_ilm_events == "0") pdl_resolve("$AI_META").resolved_value + "/file_event_registration." + target_system + ".dat"
         else pdl_resolve("$AI_META").resolved_value + "/file_event_registration.ilm." + target_system + ".dat";
end;

out :: read_files_for_mart_for_flat_file(target_system, process_ilm_events = "0")=
begin
  let string("") content = "";
  if(target_system == "*")
  begin
    let path_with_asterisk = get_registration_file_path_for_flat_file(target_system, process_ilm_events);
    let dir = string_prefix(path_with_asterisk, string_rindex(path_with_asterisk, "/"));
    let all_files = directory_listing(
                      dir,
                      string_substring(path_with_asterisk, string_rindex(path_with_asterisk, "/") + 1, 999)
                    );
     for(let file in all_files)
       content = content + read_file(dir + "/" + file);
  end
  else
    content = read_file(get_registration_file_path_for_flat_file(target_system, process_ilm_events));
  
  out :: content;
end;

file_event_registration_type[] out :: get_all_registrations_for_flat_file(target_system, process_ilm_events = "0")=
begin
  let string("\x01") contents = read_files_for_mart_for_flat_file(target_system, process_ilm_events);
  let string("\x01")[] lines = string_split_no_empty(contents, "\n");
  let file_event_registration_type[] registrations = [vector];
  for(let line in lines)
  begin
    if(not is_blank(line) and not starts_with(line, "#"))
    begin
      let string("") l = line + "\n";
      let file_event_registration_type r = reinterpret(l);
      registrations = vector_append(registrations, r);
    end
  end
  out :: registrations;
end;

file_event_registration_type[] out :: get_registration_details_for_flat_file(target_system = "*", target_entity, process_ilm_events = "0")=
begin
  let file_event_registration_type[] regs = [vector];
  regs = for(let reg in get_all_registrations_for_flat_file(target_system, process_ilm_events)) : if(reg.target_entity == target_entity) reg;
  
  out :: regs;
end;
